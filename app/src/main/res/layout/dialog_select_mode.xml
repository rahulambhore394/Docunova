<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:id="@+id/upload_card"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_dashed_border"
            android:padding="24dp">

            <!-- Upload Icon -->
            <ImageView
                android:id="@+id/upload_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_upload"
                android:layout_marginBottom="16dp"
                app:tint="#4A7CFF" />

            <!-- Title -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Document"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose an image from your gallery"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="24dp" />

            <!-- Choose from Gallery Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/choose_gallery_button"
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_height="wrap_content"
                android:text="Choose from Gallery"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_gallary"
                android:drawablePadding="8dp"
                android:backgroundTint="#4A7CFF"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp" />

            <!-- Take Photo Instead Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/take_photo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Take Photo Instead"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_camera"
                android:drawablePadding="8dp"
                android:backgroundTint="@android:color/white"
                android:textColor="#000000"
                android:background="@drawable/bg_white_button" />

            <TextView
                android:id="@+id/supported_formats"
                android:layout_below="@id/upload_card"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supported formats: JPG, PNG, PDF"
                android:textSize="12sp"
                android:textColor="#888888" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_height="40dp"
                android:background="@drawable/button_outline"
                android:text="Cancel"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:layout_below="@id/supported_formats"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

