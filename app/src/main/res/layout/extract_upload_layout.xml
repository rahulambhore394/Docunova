<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/rounded_border_background"
        android:padding="20dp"
        android:layout_margin="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select file to extract text and translate"
            android:textStyle="bold"
            android:textColor="#0056D2"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Upload Button -->
        <LinearLayout
            android:id="@+id/uploadDocumentLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/blue_button_background"
            android:layout_marginBottom="12dp"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_upload"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Document"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a file from your device"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Capture Button -->
        <LinearLayout
            android:id="@+id/captureDocumentLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/light_blue_button_border"
            android:layout_marginBottom="16dp"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_camera"
                app:tint="#0056D2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capture Document"
                android:textColor="#0056D2"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a photo of a document"
                android:textColor="#0056D2"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Notes Box -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes or Additional Input"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/notesInput"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/rounded_input_background"
            android:gravity="top"
            android:hint="Enter any notes or additional text here..."
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp" />

        <!-- Recent Documents Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Documents"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Recent Document Items -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Single Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_gray_background"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_files"
                    android:layout_gravity="center_vertical"
                    app:tint="#000000" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:text="Meeting Minutes Q3 2023"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="2023-10-26"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- Copy above block for more recent documents -->
        </LinearLayout>

    </LinearLayout>

