<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shimmerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First Row - Profile or Header Placeholder -->
        <View
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:background="@drawable/skeleton_bg"
            android:layout_marginBottom="16dp" />

        <!-- Second Row - Two Cards Placeholder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center">

            <!-- First Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/skeleton_bg"
                android:layout_margin="8dp" />

            <!-- Second Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/skeleton_bg"
                android:layout_margin="8dp" />
        </LinearLayout>

        <!-- Recent Files Title -->
        <View
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:background="@drawable/skeleton_bg"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <!-- RecyclerView Skeleton - 5 items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Repeat these for each item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/skeleton_bg"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="160dp"
                        android:layout_height="16dp"
                        android:background="@drawable/skeleton_bg"
                        android:layout_marginBottom="8dp" />

                    <View
                        android:layout_width="100dp"
                        android:layout_height="16dp"
                        android:background="@drawable/skeleton_bg" />
                </LinearLayout>
            </LinearLayout>

            <!-- Duplicate the above block 4 more times -->
        </LinearLayout>
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
