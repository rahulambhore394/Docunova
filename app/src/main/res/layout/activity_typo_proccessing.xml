<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Document Name Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="14dp"
            card_view:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📄 Document Name"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#1E293B" />

                <EditText
                    android:id="@+id/editTextDocumentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="MyDocument.pdf"
                    android:enabled="false"
                    android:background="@null"
                    android:textColor="#111827"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:progressTint="#2563EB"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/progress_bar_rounded" />

                <TextView
                    android:id="@+id/progressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#6B7280"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Extracted Text Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="14dp"
            card_view:cardBackgroundColor="@android:color/white">

            <EditText
                android:id="@+id/editTextExtractedText"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:hint="✏️ Extracted text will appear here..."
                android:gravity="top"
                android:padding="16dp"
                android:textSize="16sp"
                android:background="@null"
                android:inputType="textMultiLine"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF" />
        </androidx.cardview.widget.CardView>

        <!-- Section Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚡ Convert Options"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#1E293B"
            android:paddingTop="18dp"
            android:paddingBottom="6dp" />

        <!-- Format and Copy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnFormatText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Format Text"
                android:textColor="#2563EB"
                android:backgroundTint="#E0ECFF"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_inhance"
                android:drawablePadding="6dp" />

            <Button
                android:id="@+id/btnCopyText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Copy Text"
                android:textColor="#2563EB"
                android:backgroundTint="#E0ECFF"
                android:layout_marginStart="8dp"
                android:drawableStart="@drawable/ic_copy"
                android:drawablePadding="6dp" />
        </LinearLayout>

        <!-- Convert to PDF / Word -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnConvertToPDF"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Convert to PDF"
                android:textColor="@android:color/white"
                android:backgroundTint="#2563EB"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_pdf"
                android:drawablePadding="6dp" />

            <Button
                android:id="@+id/btnConvertToWord"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Convert to Word"
                android:textColor="#EA580C"
                android:backgroundTint="#FFF4E7"
                android:layout_marginStart="8dp"
                android:drawableStart="@drawable/ic_word"
                android:drawablePadding="6dp" />
        </LinearLayout>

        <!-- Translate -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Save"
            android:textColor="@android:color/white"
            android:backgroundTint="#2563EB"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_translate"
            android:drawablePadding="6dp" />
    </LinearLayout>
</ScrollView>
